<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">
    
    <View
        android:id="@+id/MainActivityGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:alpha="0.6"

        />

    <ImageView
        android:id="@+id/MainActivity2Blackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/MainActivity2GLH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <ImageView
        android:id="@+id/logoMainActivity2"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/_23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MainActivity2GLH1"

    />
    <TextView
        android:id="@+id/MainActivityAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/MainActivityAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoMainActivity2"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hauntress"
        />
</androidx.constraintlayout.widget.ConstraintLayout>